<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>disable</Nullable>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>

        <Authors>Yusuf Çırak</Authors>
        <!--        <Company></Company>-->
        <PackageProjectUrl>https://github.com/yusuf-cirak/YC.Solution/tree/master/src/YC.Monad</PackageProjectUrl>
        <RepositoryUrl>https://github.com/yusuf-cirak/YC.Solution</RepositoryUrl>
        <PackageVersion>1.0.0</PackageVersion>
        <PackageTags>Monad</PackageTags>
        <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageRequireLicenseAcceptance>False</PackageRequireLicenseAcceptance>
        <Description>Simple and effective Monad implementation.</Description>
        <!--        <PackageIcon></PackageIcon>-->
    </PropertyGroup>


    <ItemGroup>
        <None Include="docs\LICENSE.txt">
            <Pack>true</Pack>
            <PackagePath>\</PackagePath>
            <PackageCopyToOutput>Never</PackageCopyToOutput>
        </None>
        <None Include="README.md">
          <Pack>true</Pack>
          <PackagePath>\</PackagePath>
          <CopyToOutputDirectory>Never</CopyToOutputDirectory>
        </None>
    </ItemGroup>


    <ItemGroup>
        <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleTo">
            <_Parameter1>YC.Monad.UnitTests</_Parameter1>
        </AssemblyAttribute>
    </ItemGroup>


    <ItemGroup>
      <Compile Update="ResultCache.cs">
        <DependentUpon>Result.cs</DependentUpon>
      </Compile>
      <Compile Update="OptionCache.cs">
        <DependentUpon>Option.cs</DependentUpon>
      </Compile>
      <Compile Update="OptionExtensions.cs">
        <DependentUpon>Option.cs</DependentUpon>
      </Compile>
      <Compile Update="OptionQueryable.cs">
        <DependentUpon>Option.cs</DependentUpon>
      </Compile>
      <Compile Update="OptionEnumerable.cs">
        <DependentUpon>Option.cs</DependentUpon>
      </Compile>
      <Compile Update="OptionLinq.cs">
        <DependentUpon>Option.cs</DependentUpon>
      </Compile>
      <Compile Update="ErrorCache.cs">
        <DependentUpon>Error.cs</DependentUpon>
      </Compile>
      <Compile Update="ResultLinq.cs">
        <DependentUpon>Result.cs</DependentUpon>
      </Compile>
    </ItemGroup>

</Project>
